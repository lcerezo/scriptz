#enable updatedb on RHEL and CentOS
#adds the proper yum repos to the systems
#Mar 22, 2006 | Initial Config | Luis E . Cerezo

control:

		actionsequence = ( editfiles )

		editfiles:
       			redhat_ws_4|centos_4:: 
                        			{ /etc/updatedb.conf
                      				   ReplaceAll "DAILY_UPDATE=no" With "DAILY_UPDATE=yes"
                      				   }

