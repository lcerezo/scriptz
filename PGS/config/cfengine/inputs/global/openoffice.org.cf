#this is a basic package add.  Very straightforward and easy.  - DCY

control:

        actionsequence  = ( packages shellcommands )

packages:
	AllLinuxWorkstations::

	openoffice.org-core
        	 		pkgmgr=rpm 
				cmp=ge
				elsedefine=needs_openoffice3
				version=1:3.1.1

shellcommands:

        needs_openoffice3::
		        "${yum_bin} -y update openoffice.org*"
