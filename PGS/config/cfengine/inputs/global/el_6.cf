control:

	actionsequence = ( editfiles packages )
	RPMInstallCommand 	= ( "/usr/bin/yum -y -d 0 -e 0 install %s " )
	

editfiles:
	
	el6::
		{ /etc/sysconfig/rpcbind
			AutoCreate
			AppendIfNoSuchLine "RPCBIND_ARGS=\"-i\""
		}

packages:
	
	ksh				pkgmgr=rpm action=install
	tightvnc-server			pkgmgr=rpm action=install
	vinagre				pkgmgr=rpm action=install
	ftp				pkgmgr=rpm action=install
