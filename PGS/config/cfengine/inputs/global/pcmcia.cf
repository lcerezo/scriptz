#turns off pcmcia for desktop systems
#turns off pcmcia and disables it at start.
# Jan 25, 2006 | Initial Creation | Luis E. Cerezo


control:
	actionsequence = ( processes shellcommands )


		shellcommands:
			
			AllLinuxWorkstations|memdhcp.linux::	
				
				"/sbin/chkconfig --list pcmcia | /bin/grep :on "	useshell=true
										define=pcmcia_chkconfig_off
				
			pcmcia_chkconfig_off::
	
				"/sbin/chkconfig pcmcia off"	useshell=false
				
