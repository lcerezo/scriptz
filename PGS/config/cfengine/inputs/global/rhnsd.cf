#turns off rhnsd for desktop systems
#turns off rhnsd and disables it at start.
# Jan 25, 2006 | Initial Creation | Luis E. Cerezo


control:
	actionsequence = ( processes shellcommands )


		shellcommands:
			
			AllLinuxWorkstations|memdhcp.linux::	
				
				"/sbin/chkconfig --list rhnsd | /bin/grep :on "	useshell=true
										define=rhnsd_chkconfig_off
				
			rhnsd_chkconfig_off::
	
				"/sbin/chkconfig rhnsd off"	useshell=false
				
