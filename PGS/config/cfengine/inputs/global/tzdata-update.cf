#updates the tzdata.

control: 
	actionsequence	= ( packages shellcommands )
	Split		= ( | )
	
	packages:
	
		linux::

			tzdata	version=2006m
					cmp=ge
					pkgmgr=rpm
					elsedefine=update_tzdata


	shellcommands:
	
		update_tzdata.centos_4::
						"$(rpm_bin) -Uvh --force $(rpms_base_url)/tzdata/tzdata-2006m-3.el4.noarch.rpm"
		
		update_tzdata.fedora_3::
						"$(rpm_bin) -ivh --force $(tzdata_base_url)tzdata"


