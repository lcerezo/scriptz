#turns off cpuspeed for desktop systems
#turns off cpuspeed and disables it at start.
# Jan 25, 2006 | Initial Creation | Luis E. Cerezo


control:
	actionsequence = ( processes shellcommands )


		shellcommands:
			
			AllLinuxWorkstations|memdhcp.linux::	
				
				"/sbin/chkconfig --list cpuspeed | grep :on "	useshell=true
										define=cpuspeed_chkconfig_off
				
			cpuspeed_chkconfig_off::
	
				"/sbin/chkconfig --del cpuspeed "	useshell=false
				
