control:
	actionsequence = ( editfiles copy shellcommands )
	AddInstallable = ( failure )
	

	editfiles:
		
	servers::


			{ /etc/inittab
			CommentLinesMatching "3d:2345:respawn:/etc/3DxWare/daemon/3dxsrv -d usb </dev/null >/dev/null 2>&1"
			CommentLinesMatching "ca::ctrlaltdel:/sbin/shutdown -t3 -r now"
			DefineClasses "HUP_init"
       			}

 	shellcommands:

	      	HUP_init::
			"/sbin/init q"
					ifelapsed=900
