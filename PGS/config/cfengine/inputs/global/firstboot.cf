#turns off firstboot for desktop systems
#turns off firstboot and disables it at start.
# Jan 25, 2006 | Initial Creation | Luis E. Cerezo


control:
	actionsequence = ( processes shellcommands )


		shellcommands:
			
			AllLinuxWorkstations|memdhcp.linux::	
				
				"/sbin/chkconfig --list firstboot | /bin/grep :on "	useshell=true
										define=firstboot_chkconfig_off
				
			firstboot_chkconfig_off::
	
				"/sbin/chkconfig firstboot off"	useshell=false
				
