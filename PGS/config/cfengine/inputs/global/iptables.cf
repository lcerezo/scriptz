#turns off iptables for desktop systems
#turns off iptables and disables it at start.
# Jan 25, 2006 | Initial Creation | Luis E. Cerezo


control:
	actionsequence = ( processes shellcommands )


		shellcommands:
			
			AllLinuxWorkstations|memdhcp.linux::	
				
				"/sbin/chkconfig --list iptables | /bin/grep :on "	useshell=true
										define=iptables_chkconfig_off
				
			iptables_chkconfig_off::
	
				"/sbin/chkconfig iptables off"	useshell=false
				
