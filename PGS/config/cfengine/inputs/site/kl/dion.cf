	linux::
	     {	/etc/sysctl.conf
		AppendIfNoSuchLine "vm.min_free_kbytes = 8192"
		DefineClasses "HUPsysctl"
	     }
	     {	/etc/yp.conf
		EmptyEntireFilePlease
		Backup "false"
	     }
